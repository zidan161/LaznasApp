<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

    <ImageView
            android:id="@+id/image_user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#dedede"
            android:src="@drawable/ic_person"/>

    <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0005343"
            android:layout_toEndOf="@+id/image_user"
            android:layout_toRightOf="@+id/image_user"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"/>

    <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Zidan Aqila Muhammad"
            android:layout_below="@id/tv_user_id"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/image_user"
            android:layout_toRightOf="@+id/image_user"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"/>

    <TextView
            android:id="@+id/tv_donatur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:text="Muzaki Sejak: 12/09/2018"
            android:layout_below="@id/tv_user_id"
            android:layout_marginTop="55dp"
            android:layout_toEndOf="@+id/image_user"
            android:layout_toRightOf="@+id/image_user"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_below="@id/image_user">

        <TextView
                android:id="@+id/tv_is_zakat"
                android:text="Status: Belum Zakat"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>

        <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_marginTop="20dp"
                android:text="@string/logout"/>

    </LinearLayout>

</RelativeLayout>